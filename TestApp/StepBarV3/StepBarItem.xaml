<UserControl x:Class="TestApp.StepBarV3.StepBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="2" BorderBrush="Aquamarine" CornerRadius="50" Height="30" Width="30" Background="Aqua" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="StepNumber" VerticalAlignment="Center" HorizontalAlignment="Center">1</TextBlock>
        </Border>

        <TextBlock Grid.Row="1" HorizontalAlignment="Center">Подписать врачом</TextBlock>
    </Grid>
</UserControl>
